#include <stdio.h>
int main(){
  //khai báo các biến
	int s, n, sum = 0;
  //in  nap so n và yêu cầu người dùng nhập số
	printf("Nhap so n ma ban muon:");
  	scanf("%d",&n);
  //in n= và số vừa được nhập ở trên
	printf("n = %d\n",n);
  //chạy vòng lặp for từ  1 đến n
	for (s=1; s <= n; s++){
    //tổng hiện tại ="0",sau mỗi vòng lặp cộng giá trị ="s*s"
		sum = sum+s*s;
	}
  //in tong
  if (n == 1)
  printf("s=1^2= %d", sum );
  else if (n == 2)
  printf("s=1^2 + 2^2 = %d", sum );
  else
  printf("Tong =  %d",sum);
}
